<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.fujion.webjars</groupId>
		<artifactId>fujion-webjars</artifactId>
		<version>2.1.1</version>
	</parent>

	<name>Angular</name>
	<artifactId>webjar-angular</artifactId>
	<version>7.2.4-1-SNAPSHOT</version>
	<description>Angular libraries.</description>
	
	<properties>
		<systemjs>
			{
				"paths": {
				    "@angular/animations": "animations/bundles/animations.umd.js",
				    "@angular/animations-browser": "animations/bundles/animations-browser.umd.js",
				    "@angular/animations-browser-testing": "animations/bundles/animations-browser-testing.umd.js",
				    "@angular/common": "common/bundles/common.umd.js",
				    "@angular/common-testing": "common/bundles/common-testing.umd.js",
				    "@angular/common-http": "common/bundles/common-http.umd.js",
				    "@angular/common-http-testing": "common/bundles/common-http-testing.umd.js",
				    "@angular/compiler": "compiler/bundles/compiler.umd.js",
				    "@angular/compiler-testing": "compiler/bundles/compiler-testing.umd.js",
				    "@angular/core": "core/bundles/core.umd.js",
				    "@angular/core-testing": "core/bundles/core-testing.umd.js",
				    "@angular/elements": "elements/bundles/elements.umd.js",
				    "@angular/forms": "forms/bundles/forms.umd.js",
				    "@angular/http": "http/bundles/http.umd.js",
				    "@angular/http-testing": "http/bundles/http-testing.umd.js",
				    "@angular/language-service": "language-service/bundles/language-service.umd.js",
				    "@angular/platform-browser": "platform-browser/bundles/platform-browser.umd.js",
				    "@angular/platform-browser-animation": "platform-browser/bundles/platform-browser-animations.umd.js",
				    "@angular/platform-browser-testing": "platform-browser/bundles/platform-browser-testing.umd.js",
				    "@angular/platform-browser-dynamic": "platform-browser-dynamic/bundles/platform-browser-dynamic.umd.js",
				    "@angular/platform-browser-dynamic-testing": "platform-browser-dynamic/bundles/platform-browser-dynamic-testing.umd.js",
				    "@angular/platform-server": "platform-server/bundles/platform-server.umd.js",
				    "@angular/platform-server-testing": "platform-server/bundles/platform-server-testing.umd.js",
				    "@angular/platform-webworker": "platform-webworker/bundles/platform-webworker.umd.js",
				    "@angular/platform-webworker-dynamic": "platform-webworker-dynamic/bundles/platform-webworker-dynamic.umd.js",
				    "@angular/router": "router/bundles/router.umd.js",
				    "@angular/router-testing": "router/bundles/router-testing.umd.js",
				    "@angular/router-upgrade": "router/bundles/router-upgrade.umd.js",
				    "@angular/service-worker": "service-worker/bundles/service-worker.umd.js",
				    "@angular/service-worker-config": "service-worker/bundles/service-worker-config.umd.js",
				    "@angular/upgrade": "upgrade/bundles/upgrade.umd.js",
				    "@angular/upgrade-static": "upgrade/bundles/upgrade-static.umd.js"
				}
			}			
		</systemjs>
	</properties>
	
	<build>
		<plugins>
			<plugin>
				<groupId>com.github.eirslett</groupId>
				<artifactId>frontend-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>precompile</id>
						<configuration>
							<target>
								<copy tofile="${src.rootdir}/package.json" file="${basedir}/package-template.json">
							        <filterchain>
							            <expandproperties />
							        </filterchain>
								</copy>
							</target>
						</configuration>
					</execution>
					<execution>
						<id>postcompile</id>
						<configuration>
							<target>
								<copy todir="${webjar.target}">
									<fileset dir="${src.rootdir}" includes="LICENSE,README.md" />
									<fileset dir="${src.rootdir}/node_modules/@angular" includes="*/bundles/*.*" />
								</copy>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
